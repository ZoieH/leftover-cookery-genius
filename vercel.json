{
  "version": 2,
  "builds": [
    {
      "src": "server/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "server/index.js"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/payment-success",
      "dest": "/dist/index.html",
      "status": 200
    },
    {
      "src": "/payment-canceled",
      "dest": "/dist/index.html",
      "status": 200
    },
    {
      "src": "/(.*)",
      "dest": "/dist/index.html"
    }
  ],
  "env": {
    "FRONTEND_URL": "${FRONTEND_URL}"
  }
}
