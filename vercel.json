{
  "version": 2,
  "builds": [
    {
      "src": "server/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/webhook",
      "dest": "server/index.js"
    },
    {
      "src": "/api/create-checkout-session",
      "dest": "server/index.js"
    },
    {
      "src": "/api/(.*)",
      "dest": "server/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "/dist/$1",
      "continue": true
    },
    {
      "src": "/payment-success",
      "dest": "/dist/index.html"
    },
    {
      "src": "/payment-canceled",
      "dest": "/dist/index.html"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/dist/index.html"
    }
  ],
  "env": {
    "FRONTEND_URL": "${FRONTEND_URL}"
  }
}
